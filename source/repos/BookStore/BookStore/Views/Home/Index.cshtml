@model IEnumerable<Book>

@{
    ViewBag.Title = "Книги";
}
<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Welcome To Our Studio!</div>
        <div class="masthead-heading text-uppercase">It's Nice To Meet You</div>
        <a class="btn btn-primary btn-xl text-uppercase" href="#services">Tell Me More</a>
    </div>
</header>
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Portfolio</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-lg-4 col-sm-6 mb-4">
                    <!-- Portfolio item 1-->
                    <div class="portfolio-item">
                        <a class="portfolio-link" data-bs-toggle="modal" href="#portfolioModal1">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><p class="fas fa-plus fa-3x">Детаили</p></div>
                            </div>
                            <img class="img-fluid" src="https://media.gettyimages.com/photos/stack-of-books-picture-id157482029?s=612x612" alt="..." />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">@book.Title</div>
                            <div class="portfolio-caption-subheading text-muted">@book.Price</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
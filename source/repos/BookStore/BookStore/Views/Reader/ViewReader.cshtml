@model Reader;

@{
    ViewBag.Title = "Преглед на читател";
}

@{
    var imagePath = "/images/" + (Model.ImagePath.Length <= 0 ? "no-avatar.jpg" : Model.ImagePath);

    <div class="portfolio-modal show" id="portfolioModal1" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <div class="modal-body">
                                    <!-- Project details-->
                                    <h2 class="text-uppercase">@Model.FirstName @Model.LastName</h2>
                                    <img class="img-fluid d-block mx-auto" src="@imagePath" alt="..." />
                                    <ul class="list-inline">
                                        <li>
                                            <strong>Имена:</strong>
                                            @Model.FirstName @Model.MiddleName @Model.LastName
                                        </li>
                                        <li>
                                            <strong>Пол:</strong>
                                            @Html.DisplayFor(x=> x.Gender)
                                        </li>
                                        <li>
                                            <strong>Адрес:</strong>
                                            @Model.Address
                                        </li>
                                        <li>
                                            <strong>Телефон:</strong>
                                            @Model.PhoneNumber
                                        </li>
                                    </ul>
                                <a class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" asp-area="Reader" asp-controller="Reader" asp-action="Edit" asp-route-id="@Model.Id">
                                        <i class="fas fa-xmark me-1"></i>
                                        <span class="text-white">Редакция</span>
                                    </a>
                                <a class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" asp-area="Reader" asp-controller="Reader" asp-action="Delete" asp-route-id="@Model.Id">
                                        <i class="fas fa-xmark me-1"></i>
                                        <span class="text-white">Изтриване</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
}                      
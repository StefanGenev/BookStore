@model IEnumerable<Reader>

@{
    ViewBag.Title = "Читатели";
}
<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Секция Читатели</div>
        <div class="masthead-heading text-uppercase">Администрирайте читателите от тук</div>
        <a class="btn btn-primary btn-xl text-uppercase" href="#portfolio">Читатели</a>
    </div>
</header>
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Читатели</h2>
            <h3 class="section-subheading text-muted">Вижте кой чете книгите ви</h3>
        </div>
        <div class="row">
            @foreach (var reader in Model)
            {
                var imagePath = "/images/" + (@reader.ImagePath ?? "no-avatar.jpg");
                <div class="col-lg-4 col-sm-6 mb-4">
                    <!-- Reader item 1-->
                    <div class="portfolio-item">
                        <a class="portfolio-link" data-bs-toggle="modal" asp-controller="Reader" asp-action="View" asp-route-id="@reader.Id">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><p class="fas fa-plus fa-3x">Преглед</p></div>
                            </div>
                            <img class="img-fluid" src="@imagePath" alt="..." />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">@reader.FirstName @reader.LastName</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>